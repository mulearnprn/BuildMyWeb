// Question 4: Write a function that finds and returns the largest number in an array.

function findLargestNumber(numbers) {
   var a=numbers[0]
    for(var i=1;i<numbers.length;i++)
    {
        if(a<numbers[i])
        {
            a=numbers[i]
        }
       
    }
    return a
}

console.log(findLargestNumber([10, 20, 5, 8])); 
// Expected Output: 20
